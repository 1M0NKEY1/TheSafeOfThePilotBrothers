@page
@model TheSafeOfThePilotBrothers.Pages.Grid
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Grid with Levers</title>
    <style>
        .grid-container {
            display: grid;
            gap: 40px;
            padding: 40px;
            background-color: #f0f0f0;
            justify-items: center;
        }

        .grid-item {
            background-color: #ccc;
            padding: 0;
            position: relative;
            width: calc(50% - 10px);
            padding-bottom: calc(50% - 10px);
            cursor: pointer;
        }
    </style>
</head>
<body>
<form method="post">
    <label for="gridSize">Write size of the grid:</label>
    <input type="number" id="gridSize" name="gridSize" min="2" max="10" required />
    <button type="submit">Create grid</button>
</form>

@if (Model.GridSize.HasValue)
{
<h2>Grid size @Model.GridSize.Value x @Model.GridSize.Value:</h2>
<div class="grid-container" style="grid-template-columns: repeat(@Model.GridSize.Value, 1fr);">
    @for (var i = 0; i < Model.GridSize.Value; i++)
    {
        for (var j = 0; j < Model.GridSize.Value; j++)
        {
        <div class="grid-item"></div>
        }
    }
</div>
}

<script>
    function getRandomColor() {
        var colors = ['#e74c3c', '#2ecc71']; // Red and green colors
        var randomIndex = Math.floor(Math.random() * colors.length);
        return colors[randomIndex];
    }

    document.addEventListener('DOMContentLoaded', function() {
        var gridItems = document.querySelectorAll('.grid-item');

        gridItems.forEach(function(item) {
            item.style.backgroundColor = getRandomColor();

            item.addEventListener('click', function() {
                var currentColor = this.style.backgroundColor;

                if (currentColor === 'rgb(46, 204, 113)' || currentColor === '#2ecc71') {
                    this.style.backgroundColor = '#e74c3c';
                } else {
                    this.style.backgroundColor = '#2ecc71';
                }
            });
        });
    });

</script>

</body>
</html>
