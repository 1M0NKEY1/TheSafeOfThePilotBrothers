@page
@model TheSafeOfThePilotBrothers.Pages.TestGrid
@{
    ViewData["Title"] = "Test Grid";
}

<h2>Grid Size</h2>

<form method="post">
    <label for="size">Enter size:</label>
    <input type="number" id="size" name="size" min="2" value="@">
    <button type="submit">Update Grid</button>
</form>

<div>
    <table id="gridTable">
        @for (int i = 0; i < Model.LeverModel..GetSize(0); i++)
        {
        <tr>
            @for (int j = 0; j < Model.Lever.GetSize(1); j++)
            {
                <td>
                    @{
                        int cellValue = Model.Lever.LeverArray[i, j];
                        string backgroundColor;
                        if (cellValue == 1)
                        {
                            backgroundColor = "green";
                        }
                        else
                        {
                            backgroundColor = "red";
                        }
                        string cellId = $"cell_{i}_{j}";
                    }
                    <div id="@cellId" style="width: 50px; height: 50px; background-color: @backgroundColor; cursor: pointer;"
                         onclick="toggleCellColor('@cellId', @i, @j)">
                        @* @cellValue.ToString() *@
                    </div>
                </td>
            }
        </tr>
        }
    </table>
</div>
